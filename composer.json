{
  "name": "ronilaukkarinen/wpstack-rolle",
  "type": "project",
  "license": "MIT",
  "description": "A modern WordPress stack",
  "homepage": "https://github.com/ronilaukkarinen/wpstack-rolle",
  "authors": [
    {
      "name": "Roni Laukkarinen",
      "email": "roni.laukkarinen@gmail.com",
      "homepage": "https://github.com/ronilaukkarinen"
    }
  ],
  "keywords": [
    "wordpress", "stack", "capistrano", "composer", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "http://discourse.roots.io/category/bedrock"
  },
  "require": {
    "ronilaukkarinen/wpstack-rolle": "dev-master"
  },
  "config": {
    "preferred-install": "dist",
    "generate-salts": true
  },
  "autoload": {
    "psr-0": {"Bedrock\\Installer": "scripts"}
  },
  "scripts": {
    "post-root-package-install": ["Bedrock\\Installer::addSalts"]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "wordpress",
        "version": "4.1",
        "type": "webroot",
        "dist": {
          "type": "zip",
          "url": "http://sv.wordpress.org/wordpress-4.1-fi.zip"
        },
        "require" : {
          "fancyguy/webroot-installer": "1.1.0"
        }
      }
    }
  ],
  "require": {
    "php": ">=5.3.2",
    "wordpress": "4.1",
    "fancyguy/webroot-installer": "1.1.0",
    "composer/installers": "v1.0.6",
    "wp-cli/wp-cli": "v0.13.0",
    "vlucas/phpdotenv": "~1.0.5",
    "wpackagist-plugin/akismet":"*",
    "wpackagist-plugin/wordpress-seo":"*",
    "wpackagist-plugin/disqus-comment-system":"*",
    "wpackagist-plugin/wp-html-compression":"*",  
    "wpackagist-plugin/wp-super-cache":"*",
    "wpackagist-plugin/wp-last-login":"*",
    "wpackagist-plugin/theme-my-login":"*",
    "wpackagist-plugin/buddypress":"*"
  },
  "extra": {
    "installer-paths": {
      "content/plugins/{$name}/": ["type:wordpress-plugin"],
      "content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "content/themes/{$name}/": ["type:wordpress-theme"]
    },
    "webroot-dir": "wp",
    "webroot-package": "wordpress"
  }
}
